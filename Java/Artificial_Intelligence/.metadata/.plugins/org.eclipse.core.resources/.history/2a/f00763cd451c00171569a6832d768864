    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton6ActionPerformed
       String Path=getClass().getProtectionDomain().getCodeSource().getLocation().getPath();
  
       
        try {
            String ppth=java.net.URLDecoder.decode(Path,"UTF-8");
            
            ppth=System.getProperty("user.dir");
//            int firstIndex = ppth.lastIndexOf(System.getProperty("path.separator"))+1; 
//            int lastIndex = ppth.lastIndexOf(File.separator) +1; 
//            ppth = ppth.substring(firstIndex, lastIndex); 
            // yidongfangfa.setText(ppth);
            Runtime.getRuntime().exec(ppth+"/野人与传教士.exe");
           // desktop.open(new File("myfile.txt"));
            //java.awt.Desktop.open(new File(ppth+"/野人与传教士.swf"));
            //Runtime.getRuntime().load(ppth+"/野人与传教士.swf");
        } catch (IOException ex) {
            yidongfangfa.setText(ex.toString());
            Logger.getLogger(game_show.class.getName()).log(Level.SEVERE, null, ex);
        }
       // new playgame().setVisible(true);        
       
                
        // TODO add your handling code here:
    }//GEN-LAST:event_jButton6ActionPerformed

