        public void windowClosing(WindowEvent e)
        {
            dispose();//关闭9按键为关闭本窗口
            anquan.chushihua();
            if(anquan.isok())//chao_le
            {
                anquan.showinfo();
            // new banquan().setVisible(true);    
            }else
            {
                anquan.tui();
            }
            
      }});
        ji=new jisuan(Integer.parseInt(peoplenum.getText()),Integer.parseInt(shipnum.getText()));
    }

