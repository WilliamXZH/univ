package pers.william.MCB;

import java.util.Scanner;

public class FirstTest {
	
	String info = "";
	
	public static void main(String[] args){
		Scanner scan = new Scanner(System.in);
		System.out.println("enter the number of N and k:\n");
		
		int n,k;
		n = scan.nextInt();
		k = scan.nextInt();
		
		FirstTest ft = new FirstTest();
		
		ft.DFS(n, n, n, k, true);
	}
	
	private boolean DFS(int liv_m, int liv_c, int giv_n, int giv_k, boolean locationOfBoard){
		if(liv_m==0 && liv_c==0)return true;
		
		if(liv_m!=0 && liv_m != liv_c)return false;
		
		if(locationOfBoard){
			for(int i=0; i<giv_k; i++){
				for(int j=0; j<giv_k-i && j<=i; j++){
					if(i+j!=0 && DFS(liv_m-i, liv_c-j, giv_n, giv_k, false)){
						info = i +" misssionaries and " + j 
								+" cannibals went across the river.\n" + info;
					}
				}
			}
		}else{
			for(int i=0; i<)
		}
		
		
		return false;
	}
}
