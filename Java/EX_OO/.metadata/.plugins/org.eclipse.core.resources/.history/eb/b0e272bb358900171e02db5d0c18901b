package com.neu.util;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;

import org.junit.Test;

import com.neu.model.po.PersonPO;

public class fileUtil {
	
	@Test
	public void test(){
		System.out.println("test!!!");
		List<PersonPO> list = readDataFile();
		for(int i=0;i<list.size();i++){
			System.out.println(list.get(i));
		}
	}

	public List<PersonPO> readDataFile(){
		List<PersonPO> list = new ArrayList<>();
		try {
			BufferedReader br = new BufferedReader(
					new InputStreamReader(new FileInputStream("personnel.dat")));
			String data = null;
			try {
				while((data = br.readLine())!=null){
					list.add(new PersonPO(data));
				}
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return null;
	}
	
	public boolean saveAsFile(List<PersonPO> data){
		return false;
	}
}
