<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listViewSpecificContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="0dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_secondui_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:contentDescription="@string/dujia"
            android:src="@drawable/ic_title_back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/dujia" />

        <ImageView
            android:id="@+id/iv_secondui_comment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/dujia"
            android:src="@drawable/commentbutton_up2" />

        <ImageView
            android:id="@+id/iv_secondui_share"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:contentDescription="@string/dujia"
            android:src="@drawable/share_icon_up2" />
    </LinearLayout>

</LinearLayout>