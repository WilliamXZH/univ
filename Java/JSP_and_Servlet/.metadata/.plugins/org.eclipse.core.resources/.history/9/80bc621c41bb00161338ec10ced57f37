package pers.william.server;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.net.Socket;
import java.util.Scanner;

public class ClientThread extends Thread {
    private static Socket s;
    private static BufferedReader reader;
    private static OutputStream writer;
	public Socket getSocket(){
		return this.s;
	}
	public void setSocket(Socket s){
		this.s=s;
	} 
    ClientThread(Socket s){
    	System.out.println("Connect a client.");
    	this.s=s;
    }
    public void run(){
    	Scanner scan=new Scanner(System.in);
        try {
			reader= new BufferedReader(new InputStreamReader(s.getInputStream(), "utf-8"));
            while(true){
            	writer=s.getOutputStream();			
        		String sent=reader.readLine();
        		System.out.println(sent);
        		String str=scan.next();
        		writer.write(str.getBytes("utf-8"));
        		writer.flush();
        		//s.getOutputStream().write(Integer.parseInt(str));  		        		
    		}
		} catch (IOException e) {
			e.printStackTrace();
		}    
    	scan.close();
    }
}