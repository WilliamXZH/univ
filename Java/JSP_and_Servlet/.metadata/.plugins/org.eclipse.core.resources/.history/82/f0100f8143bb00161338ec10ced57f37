package pers.william.server;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.net.Socket;
import java.util.Scanner;

public class ClientThread extends Thread {
    private static Socket s;
    
    ClientThread(Socket soc){
    	this.s=soc;
    }
	public void run(){
	    BufferedReader reader;
	    OutputStream writer;
    	Scanner scan=new Scanner(System.in);
        try {
            writer=s.getOutputStream();		
			reader= new BufferedReader(new InputStreamReader(s.getInputStream(), "utf-8"));
            while(true){	
            	System.out.println("Prepare to receive info:");
        		String sent=reader.readLine();
        		System.out.println(sent);
        		String str=scan.next();
        		writer.write(str.getBytes("utf-8"));
    		}
		} catch (IOException e) {
			e.printStackTrace();
		}    
    	scan.close();
    }
}